<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">

<h2 class="text-dark bg-light p-4 mb-0">新規企業登録</h2>
      <div class="form-body p-4">
        <%= form_with model: @customer, local:true do |f| %>

        <h4>企業名</h4>
        <%= f.text_field :customer_name ,class:"form-control" %>
        <h4>住所</h4>
        <%= f.text_field :address ,class:"form-control"%>
        <h4>連絡先</h4>
        <%= f.text_field :telephone_number ,class:"form-control" %>
        <h4>担当者</h4>
        <%= f.text_field :manager ,class:"form-control"%>

        <h4>メモ</h4>
        <%= f.text_area :memo ,class:"form-control"  %>
        <%= f.submit '登録' , class:"btn btn-lg btn-block btn-info mt-4" %>
      <% end %>
      </div>
    </div>
  </div>
</div>